@model IEnumerable<WEB_SITE.Models.Escalas>

@{
    ViewData["Title"] = "Listado de Escalas";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-primary" asp-action="Create" asp-controller="Escalas">Crear Escalas</a>
</p>
<table class="table">
    <thead class="thead-dark">
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.DuracionEscala)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DuracionLlegada)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DuracionEscala)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DuracionLlegada)
                    </td>
                    <td>
                        <a href="@Url.Action("Modify","Escalas")" class="btn btn-primary">
                            <i class="fas fa-edit" aria-hidden="true"></i> Edit
                        </a> |
                        <a onclick="EliminarEscala();" class="btn btn-danger">
                            <i class="fas fa-trash" aria-hidden="true"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <th scope="row">No Hay Data</th>
            </tr>
        }
    </tbody>
</table>
